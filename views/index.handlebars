<div class="container text-white">
    <div class = "row">
        <div class = "col-md not-eaten">

            <h2>Burgers you want to eat!</h2>

            <ul>
            {{#each burger}}
                {{#unless eaten}}
                {{> burgers/burger-block eaten=true}}
                {{/unless}}
            {{/each}}
            </ul>

        </div>
        
        
        <div class = "col-md eaten">

            <h2>Burgers you've eaten!</h2>

            <ul>
            {{#each burger}}
                {{#if eaten}}
                {{> burgers/burger-block eaten=false}}
                {{/if}}
            {{/each}}
            </ul>

        </div>
    </div>

    <div class="row justify-content-center">
        <form class="burger-form text-center">

            <h2>Add a Burger</h2>

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="burger">
        </div>

        <button type="submit">Add Burger</button>
        </form>

    </div>
</div>