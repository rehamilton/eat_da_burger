<SECTION>
    <div class = "row">
        <div class = "column">

            <h2>Burgers you want to eat!</h2>

            <ul>
            {{#each burger}}
                {{#unless eaten}}
                {{> burgers/burger-block eaten=true}}
                {{/unless}}
            {{/each}}
            </ul>

        </div>
        <div class = "column">

            <h2>Burgers you've eaten!</h2>

            <ul>
            {{#each burger}}
                {{#if eaten}}
                {{> burgers/burger-block eaten=false}}
                {{/if}}
            {{/each}}
            </ul>

        </div>
    </div>

    <div class = "row">

        <h2>Add a Burger</h2>
        <form class="burger-form">

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="burger">
        </div>

        <div class="form-group">
            <label for="eaten">Eaten?</label><br>
            <input type="radio" name="eaten" value="1" checked> Eaten!<br>
            <input type="radio" name="eaten" value="0"> Not Eaten
        </div>

        <button type="submit">Add Burger</button>
        </form>

    </div>
</SECTION>